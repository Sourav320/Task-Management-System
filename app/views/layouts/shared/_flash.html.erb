<div id="flash-messages" class="position-fixed top-0 end-0 p-3" style="z-index: 1055;">
  <% flash.each do |type, message| %>
    <div class="alert alert-<%= bootstrap_class_for(type) %> alert-dismissible fade show shadow-sm mb-2">
      <%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% end %>
</div>
